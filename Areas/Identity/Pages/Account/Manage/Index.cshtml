@page
@model IndexModel


<div class="card w-100">
    <div class="card-header">
        <h3 style="margin-top:9px; color:#4b49ac"> @sharedResource["Profile"] </h3>
    </div>
    <div style="padding-top:20px;padding-left:20px;padding-right:20px">
        @{
            ViewData["Title"] = "Profile";
            ViewData["ActivePage"] = ManageNavPages.Index;
            @if (User.IsInRole("Admin"))
            {
                Layout = "/Areas/Admin/Pages/Shared/_Layout.cshtml";

            }

            @if (User.IsInRole("Shop"))
            {
                Layout = "/Areas/Shop/Pages/Shared/_Layout.cshtml";

            }
        }



        <partial name="_StatusMessage" model="Model.StatusMessage" />
        <div class="row form_cont">
            <div class="col-md-6">
                <form id="profile-form" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label> @sharedResource["Username"] </label>
                        <input asp-for="Username" class="form-control" disabled />
                    </div>
                    <div class="form-group">
                        <label > @sharedResource["ProfilePicture"] </label>
                        <input asp-for="ProfilePicture" class="form-control" />
                    </div>
                    
                    
            @if (User.IsInRole("Shop"))
            {
                    <div class="form-group">
                        <label > @sharedResource["BannerPicture"] </label>
                        <input asp-for="BannerPicture" class="form-control" />
                    </div>

            }

                    <div class="form-group">
                        <label> @sharedResource["PhoneNumber"] </label>
                        <input asp-for="Input.PhoneNumber" class="form-control" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <button id="update-profile-button" type="submit" class="btn btn-primary">@sharedResource["Save"]</button>
                </form>
            </div>
            <div class="col-md-6">

                <partial name="_ManageNav" model="Model.StatusMessage" />
            </div>
        </div>

        @*@section Scripts {
            <partial name="_ValidationScriptsPartial" />
            }*@
    </div>
</div>