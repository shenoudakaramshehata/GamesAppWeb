@page
@model Gameapp.Areas.Admin.Pages.Countries.DetailsModel
@{
}
<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-header d-flex justify-content-between align-items-center">
                            @sharedResource["Details"]
                            <a asp-page="Index" class="btn btn-primary"> @sharedResource["Back"]</a>
                        </h2>
                    </div>
                    <div class="card-body">

                        <div style="padding-top:20px;padding-left:20px;padding-right:20px">
                            <div class="row">
                                <h4> @sharedResource["Informations"] </h4>
                                <hr />

                                <div class="col-md-12 col-lg-12 mt-4">
                                    <dl class="row">
                                        <dt class="col-sm-2">@sharedResource["TlAr"]  </dt>
                                        <dd class="col-sm-10"> @Model.country.CountryTlar </dd>
                                    </dl>
                                </div>

                                <div class="col-md-12 col-lg-12 mt-4">
                                    <dl class="row">
                                        <dt class="col-sm-2">@sharedResource["TlEn"]  </dt>
                                        <dd class="col-sm-10"> @Model.country.CountryTlen </dd>
                                    </dl>
                                </div>

                                <div class="col-md-12 col-lg-12 mt-4">
                                    <dl class="row">
                                        <dt class="col-sm-2">@sharedResource["Sort"]  </dt>
                                        <dd class="col-sm-10"> @Model.country.OrderIndex </dd>
                                    </dl>
                                </div>

                                <div class="col-md-12 col-lg-12 mt-4">
                                    <dl class="row">
                                        <dt class="col-sm-2">@sharedResource["IsActive"]  </dt>
                                        <dd class="col-sm-10">
                                            @{
                                                if (Model.country.IsActive==true)
                                                {
                                                    <div>@sharedResource["Active"] </div>
                                                }
                                                else
                                                {
                                                    <div>@sharedResource["Not Active"] </div>
                                                }
                                            }
                                        </dd>
                                    </dl>
                                </div>
                                <div class="col-md-12 col-lg-12 mt-4">
                                    <dl class="row">
                                        <dt class="col-sm-2">@sharedResource["Picture"]  </dt>
                                        <dd class="col-sm-10">
                                            <img style="border-radius: 13%;" width="250" height="250" class="img-fluid" src="~/Images/countries/@Model.country.Pic" />
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
