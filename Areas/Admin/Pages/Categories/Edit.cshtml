@page
@model Gameapp.Areas.Admin.Pages.Categories.EditModel
@{
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-header d-flex justify-content-between align-items-center">
                            @sharedResource["Edit"]  @sharedResource["Category"]
                            <a asp-page="Index" class="btn btn-primary"> @sharedResource["Back"]</a>
                        </h2>
                    </div>
                    <div class="card-body">
                        <br />
                        <form id="form" method="post" enctype="multipart/form-data">
                            @(Html.DevExtreme().Form<Gameapp.Models.Category>()
                                 .FormData(Model.category)
        .Items(items =>
        {


        items.AddSimpleFor(m => m.CategoryId).Visible(false);
        items.AddSimpleFor(m => m.CategoryTlar).Label(k => k.Text(sharedResource["TlAr"])).IsRequired(true);
        items.AddSimpleFor(m => m.CategoryTlen).Label(k => k.Text(sharedResource["TlEn"])).IsRequired(true);
        items.AddSimpleFor(m => m.OrderIndex).Label(k => k.Text(sharedResource["Sort"])).IsRequired(true);
        items.AddSimpleFor(m => m.IsActive).Label(k => k.Text(sharedResource["IsActive"]));


       items.AddSimple().Label(k => k.Text(sharedResource["Picture"])).Template(@<text>
                        <div>
                    <img width="250" height="250" src="/Images/categories/@Model.category.CategoryPic" alt="Category Picture"/>
                </div>
                            </text> );

            items.AddSimpleFor(m => m.CategoryPic).Label(k => k.Text(sharedResource["Change_Picture"])).Template(@<text>


                            @(Html.DevExtreme().FileUploader()
                                        .Name("CategoryPic")
                                        .SelectButtonText(sharedResource["Change_Picture"])
                                        .LabelText("")
                                        .Accept("image/*")
                                        .UploadMode(FileUploadMode.UseForm)
                                         .RtlEnabled(bool.Parse(sharedResource["ArLang"]))
                            .Height(70)
                                                        )

                            </text> );

              items.AddSimple().Label(k => k.Text(sharedResource["Picture"])).Template(@<text>
                        <div>
                    <img width="250" height="250" src="/Images/categories/@Model.category.CategoryIcon" alt="Category Icon"/>
                </div>
                            </text> );

            items.AddSimpleFor(m => m.CategoryIcon).Label(k => k.Text(sharedResource["Change_Icon"])).Template(@<text>


                            @(Html.DevExtreme().FileUploader()
                                        .Name("CategoryIcon")
                                        .SelectButtonText(sharedResource["Change_Picture"])
                                        .LabelText("")
                                        .Accept("image/*")
                                        .UploadMode(FileUploadMode.UseForm)
                                         .RtlEnabled(bool.Parse(sharedResource["ArLang"]))
                            .Height(70)
                                                        )

                            </text> );


                            items.AddButton()
                                    .ColSpan(3)
                                    .ButtonOptions(b => b.Text(sharedResource["Save"])
                                    .Type(ButtonType.Success)
                                    .UseSubmitBehavior(true)).CssClass("invers");
                        })
)
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
