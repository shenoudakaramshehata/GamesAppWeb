@page
@model Gameapp.Areas.Admin.Pages.PlatformsGames.DeleteModel
@{
}
<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-header d-flex justify-content-between align-items-center">
                            @sharedResource["Delete"]
                            <a asp-page="Index" class="btn btn-primary"> @sharedResource["Back"]</a>
                        </h2>
                    </div>
                    <div class="card-body">

                        <div style="padding-top:20px;padding-left:20px;padding-right:20px">
                            <div class="row">
                                <h4> @sharedResource["Informations"] </h4>
                                <hr />

                                <div class="col-md-12 col-lg-12 mt-4">
                                    <dl class="row">
                                        <dt class="col-sm-2">@sharedResource["TlAr"]  </dt>
                                        <dd class="col-sm-10"> @Model.platformGame.GameTLAR </dd>
                                    </dl>
                                </div>

                                <div class="col-md-12 col-lg-12 mt-4">
                                    <dl class="row">
                                        <dt class="col-sm-2">@sharedResource["TlEn"]  </dt>
                                        <dd class="col-sm-10"> @Model.platformGame.GameTLEN </dd>
                                    </dl>
                                </div>
                                <div class="col-md-12 col-lg-12 mt-4">
                                    <dl class="row">
                                        <dt class="col-sm-2">@sharedResource["Sort"]  </dt>
                                        <dd class="col-sm-10"> @Model.platformGame.OrderIndex </dd>
                                    </dl>
                                </div>
                                
                                @{
                if (Model.platformGame.PlatFormId != 0)
                {
                    <div class="col-md-12 col-lg-6 mt-4">
                        <h4> @sharedResource["Platform"] </h4>
                        <hr />

                        <div class="d-flex justify-content-between">
                            <div>@sharedResource["TlAr"]  </div>
                            <div> @Model.platformGame.platform.PlatformTLAR </div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <div>@sharedResource["TlEn"]  </div>

                            <div> @Model.platformGame.platform.PlatformTLEN </div>
                        </div>
                    </div>
                }


            }
                               
                                <div class="col-md-12 col-lg-12 mt-4">
                                    <dl class="row">
                                        <dt class="col-sm-2">@sharedResource["Picture"]  </dt>
                                        <dd class="col-sm-10">
                                            <img style="border-radius: 13%;" width="250" height="250" class="img-fluid" src="~/Images/Platform/@Model.platformGame.GamePic" />
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                        <form method="post">
                            <div class="invers">
                                @(Html.DevExtreme().Button()
                    .ID("button")
                    .Text(sharedResource["Delete"])
                    .Type(ButtonType.Danger)
                    .UseSubmitBehavior(true)

                    )
                            </div>

                        </form>
                    </div>
                    </div>
            </div>
        </div>

    </div>
</div>


















