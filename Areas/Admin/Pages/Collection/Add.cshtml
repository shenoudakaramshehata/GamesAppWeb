@page
@model Gameapp.Areas.Admin.Pages.Collection.AddModel
@{
}

<div class="page-content" style="width: 100%;">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-header d-flex justify-content-between align-items-center">
                            @sharedResource["Add"]  @sharedResource["Collection"]
                            <a asp-page="Index" class="btn btn-primary"> @sharedResource["Back"]</a>
                        </h2>
                    </div>
                    <div class="card-body">
                        <br />
                        <form id="form" method="post" enctype="multipart/form-data">
                            @(Html.DevExtreme().Form<Gameapp.Models.Collection>
    ().ColCount(1)
    .Items(items =>
    {

    items.AddSimpleFor(m => m.CollectionTitleAr).IsRequired(true).Label(k => k.Text(sharedResource["TlAr"]));
    items.AddSimpleFor(m => m.CollectionTitleEn).IsRequired(true).Label(k => k.Text(sharedResource["TlEn"]));
    items.AddSimpleFor(m => m.IsActive).Label(k => k.Text(sharedResource["IsActive"]));
    
    items.AddSimpleFor(m => m.Source).IsRequired(true).Label(k => k.Text(sharedResource["Sort"]));



    items.AddButton()
    .ColSpan(3)
    .HorizontalAlignment(HorizontalAlignment.Right)
    .ButtonOptions(b => b.Text(sharedResource["Save"])
    .Type(ButtonType.Success)
    .UseSubmitBehavior(true)).CssClass("invers");
    })
    )
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>